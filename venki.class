class le{
public static void main(String[] a){

int n,rev=0,temp;
n=1001;
temp=n;

while(temp!=0)
{
rev=rev*10;
rev=rev+temp%10;
temp=temp/10;
}

if(n==rev)
System.out.println("is a palindrome");
else
System.out.println("not palindrome");
}
}

//output:is a palindrome








